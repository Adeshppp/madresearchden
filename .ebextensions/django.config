option_settings:
  aws:elasticbeanstalk:container:python:
    WSGIPath: ross_website/wsgi.py

container_commands:


    03_RDS:
      command: "source /opt/python/run/venv/bin/activate && source /opt/python/current/env"

    04_migrate:
      command: "source /opt/python/run/venv/bin/activate && python manage.py migrate"

    05_collectstatic:
       command: "source /opt/python/run/venv/bin/activate && python manage.py collectstatic --noinput"

files:
    "/etc/httpd/conf.d/ssl_rewrite.conf":
        mode: "000644"
        owner: root
        group: root
        content: |
            RewriteEngine On
            <If "-n '%{HTTP:X-Forwarded-Proto}' && %{HTTP:X-Forwarded-Proto} != 'https'">
            RewriteRule (.*) https://%{HTTP_HOST}%{REQUEST_URI} [R=Permanent,L]
            </If>


    "/etc/httpd/conf.d/www_rewrite.conf":
        mode: "000644"
        owner: root
        group: root
        content: |
            RewriteEngine On
            <If"'%{HTTP_HOST}' !~ /^www\./" >
            RewriteRule ^ (.*)$ http: // www. % {HTTP_HOST} % {REQUEST_URI}[R =Permanent, L]
            </If >